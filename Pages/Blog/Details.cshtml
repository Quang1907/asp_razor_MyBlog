@page "/blog/{id:int}/detail"
@model ASP_RAZOR_5.Pages_Blog.DetailsModel

@{
    ViewData["Title"] = Model.Article.Title;
}

<h1>@Html.DisplayNameFor( model => model.Article.Title) : @Model.Article.Title</h1>
<p><i>@Html.DisplayNameFor(model => model.Article.Created)</i><span> - </span><i>@Html.DisplayFor( model => model.Article.Created)</i></p>
<div>
    <h4>Bài viết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Article.Content)
        </dd>
    </dl>
    <hr />
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
