@model ASP_RAZOR_5.Pages_Blog.DeleteModel

@{
    ViewData["Title"] = $"Delete - {Model.Article.Title}";
}
<h2>Xoá</h2>
<h3>Bạn có muốn tiếp tục</h3>
<div>
    <h4>Bài viết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Created)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Article.Id" />
